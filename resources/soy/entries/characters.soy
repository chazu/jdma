              {param field}
                {call dma.entries.levels.edit}
                  {param entry: $level /}
                {/call}
              {/param}
            {/call}
          {ifempty}
            {call dma.edit.field_list_line}
              {param field}
                {call dma.entries.levels.edit /}
              {/param}
            {/call}
          {/foreach}
        {/param}
        {param color: '#39f' /}
      {/call}
      {call dma.edit.generic_value}
        {param label: 'Feats' /}
        {param value}
          {foreach $feat in $entry.feats}
            feat: {$feat}
            {call dma.edit.field_list_line}
              {param field}
